= render 'shared/mini_header'
.BuyWrapper
  .Purchase 
    .Purchase__title
      購入内容の確認
    .Purchase__info
      = image_tag @image.src_url, size: "270x180"
      .Purchase__info--name
        %p ♠︎商品名
        %h2
        = @item.name
        %p ♣️値段
        %h2
        = "#{@item.price} 円"
    .Purchase__money
      .Purchase__money--name
        支払い金額
      .Purchase__money--price
        = "¥#{@item.price} 円"
    .PurchaseCard
      %h1 クレジットカード情報
      .PurchaseCard__info
        .PurchaseCard__info--text カード番号
        = "**** **** **** " + @default_card_information.last4
        .PurchaseCard__info--text 有効期限
        - exp_month = @default_card_information.exp_month.to_s
        - exp_year = @default_card_information.exp_year.to_s.slice(2,3)
        = exp_month + " / " + exp_year
    .Purchase__btn
      = link_to "登録クレジットカードで購入する", pay_item_path(@item.id) ,method: :post ,class: "btn"

